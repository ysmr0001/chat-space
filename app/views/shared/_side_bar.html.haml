.chat-side
  .header
    .header__box
      %p.header__box__user-name
        = current_user.name
      %ul.header__box__menu
        %li.header__box__menu__new-group
        = link_to new_group_path do
          = icon('fa', 'edit')
          %span<>
        %li.header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog')
          %span<>

  .groups
    - current_user.groups.each do |group|
      = link_to '#', class:"group" do
        %p.group__group-name
          = group.name
        %p.group__group-message
          まだメッセージはありません
